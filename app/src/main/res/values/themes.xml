<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Afisha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/afisha_blue</item>
        <item name="colorPrimaryVariant">@color/afisha_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/afisha_yellow</item>
        <item name="colorSecondaryVariant">@color/afisha_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="R">false</item>
    </style>

    <style name="AfishaInput">
        <item name="android:background">@drawable/afisha_input</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/text_color_50</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/error_message_background</item>
        <item name="android:textColor">@color/afisha_red</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AfishaButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AfishaTitle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AfishaText">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AfishaSpinner">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/afisha_spinner_background</item>
    </style>

    <style name="AfishaPicker">
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/text_color_50</item>
    </style>
</resources>